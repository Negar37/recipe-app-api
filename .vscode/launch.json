    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Django Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
            ],
            "django": true
        },
        {
            "name": "Python: Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--failfast",
                "--parallel",
            ],
            "django": true
        },
        {
            "name": "Python: Django Tests/TAG debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--tag",
                "debug",
            ],
            "django": true
        },
        {
            "name": "Python: Django shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell", // TODO: install and use "shell_plus"
            ],
            "django": true
        },
    ]
}
